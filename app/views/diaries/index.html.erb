<div class="page-header">
  <%= link_to new_diary_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    日記をつける
  <% end %>
  <h1>筋肉日記</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>重量[kg]</th>
            <th>回数</th>
            <th>セット数</th>
            <th>備考</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @diaries) do |diary| %>
            <td><%= diary.weight %></td>
            <td><%= diary.num %></td>
            <td><%= diary.set %></td>
            <td><%= diary.note %></td>
            <td><%= link_to '表示', diary %></td>
        <td><%= link_to '編集', edit_diary_path(diary) %></td>
        <td><%= link_to '削除', diary, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
